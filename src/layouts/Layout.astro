---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
</head>
<body>
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
</body>
</html>
<style is:global>
    body {
        font-family: system-ui, sans-serif;
        background: #13151a;
        color: white;
        margin: 0;
        padding: 0;
    }
    main {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        min-height: 80vh;
    }
</style>