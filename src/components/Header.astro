---
const currentPath = Astro.url.pathname;
---

<header>
    <nav>
        <a href="/" class="logo">
            <span class="logo-symbol">Portfolio</span>
        </a>

        <div class="nav-links">
            <a href="/" class={currentPath === "/" ? "active" : ""}>
                Inicio
            </a>
            
            <a href="/proyectos" class={currentPath.startsWith("/proyectos") ? "active" : ""}>
                Proyectos
            </a>
            
            <a href="/sobre-mi" class={currentPath.startsWith("/sobre-mi") ? "active" : ""}>
                Sobre m√≠
            </a>
        </div>

        <a href="/contacto" class="btn-contact">Contacto
        </a>
    </nav>
</header>

<style>
    header {
        position: sticky;
        top: 0;
        z-index: 100;
        width: 100%;
        background-color: rgba(19, 21, 26, 0.8);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 900px;
        margin: 0 auto;
        padding: 1rem 1.5rem;
    }

    .logo {
        text-decoration: none;
        color: white;
        font-weight: 800;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }
    .logo-symbol {
        background: #4f39fa;
        padding: 2px 6px;
        border-radius: 4px;
    }
    .logo:hover { opacity: 0.8; }

    .nav-links {
        display: flex;
        gap: 2rem;
    }

    .nav-links a {
        text-decoration: none;
        color: #ccc;
        font-weight: 500;
        font-size: 0.95rem;
        transition: color 0.3s;
        position: relative;
    }

    .nav-links a:hover {
        color: white;
    }

    .nav-links a.active {
        color: #4f39fa;
        font-weight: bold;
    }
    
    .nav-links a.active::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: #4f39fa;
        border-radius: 2px;
    }

    .btn-contact {
        background-color: white;
        color: #13151a;
        padding: 0.4rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: transform 0.2s, background-color 0.2s;
    }

    .btn-contact:hover {
        background-color: #ddd;
        transform: scale(1.05);
    }

    @media (max-width: 600px) {
        .logo-text { display: none; }
        .nav-links { gap: 1rem; }
        .nav-links a { font-size: 0.85rem; }
        .btn-contact { padding: 0.3rem 0.6rem; font-size: 0.8rem; }
        nav { padding: 1rem; }
    }
</style>